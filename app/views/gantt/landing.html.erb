<div class="landing-page">
  <header class="hero">
    <div class="container">
      <h1 class="hero-title">Project Management Tool</h1>
      <p class="hero-subtitle">Powerful project and task management with secure sharing across organizations</p>
      
      <div class="cta-buttons">
        <% if current_user %>
          <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Sign Up", signup_path, class: "btn btn-primary" %>
          <%= link_to "Log In", login_path, class: "btn btn-outline" %>
        <% end %>
      </div>
    </div>
  </header>
  
  <section class="features">
    <div class="container">
      <h2 class="section-title">Features</h2>
      
      <div class="feature-grid">
        <div class="feature-card">
          <h3>Secure Collaboration</h3>
          <p>Share projects and tasks with internal and external users with fine-grained permissions</p>
        </div>
        
        <div class="feature-card">
          <h3>Task Dependencies</h3>
          <p>Create task relationships and dependencies to organize your workflow</p>
        </div>
        
        <div class="feature-card">
          <h3>Gantt Chart</h3>
          <p>Visualize your project timeline with an interactive Gantt chart</p>
        </div>
        
        <div class="feature-card">
          <h3>External Sharing</h3>
          <p>Invite non-registered users to view and update tasks via secure links</p>
        </div>
      </div>
    </div>
  </section>
  
  <section class="how-it-works">
    <div class="container">
      <h2 class="section-title">How It Works</h2>
      
      <div class="steps">
        <div class="step">
          <span class="step-number">1</span>
          <h3>Create Your Organization</h3>
          <p>Set up your organization and invite team members</p>
        </div>
        
        <div class="step">
          <span class="step-number">2</span>
          <h3>Add Projects</h3>
          <p>Create projects to organize your work</p>
        </div>
        
        <div class="step">
          <span class="step-number">3</span>
          <h3>Manage Tasks</h3>
          <p>Add tasks, set dependencies, and assign to team members</p>
        </div>
        
        <div class="step">
          <span class="step-number">4</span>
          <h3>Collaborate</h3>
          <p>Share with team members or external partners</p>
        </div>
      </div>
    </div>
  </section>
  
  <footer class="site-footer">
    <div class="container">
      <p>&copy; <%= Date.today.year %> Project Management Tool</p>
    </div>
  </footer>
</div>

