<div class="login-container">
  <div class="login-card">
    <h2>Log In to Harmoniq</h2>
    
    <%= form_with(url: login_path, method: :post, class: "login-form") do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", required: true %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="login-footer">
      <p>Don't have an account? <%= link_to "Sign Up", signup_path %></p>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f0f4f8;
  }
  
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }
  
  .login-card {
    background-color: white;
    border-radius: 8px;
    padding: 35px;
    box-shadow: 0 8px 16px rgba(0, 51, 102, 0.1);
    width: 100%;
    max-width: 400px;
    border-top: 4px solid #6699CC;
  }
  
  .login-card h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #003366;
    font-weight: 600;
  }
  
  .login-form {
    margin-bottom: 20px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #000044;
  }
  
  .form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #C0C0C0;
    border-radius: 6px;
    font-size: 16px;
    transition: all 0.2s;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #6699CC;
    box-shadow: 0 0 0 2px rgba(102, 153, 204, 0.2);
  }
  
  .form-actions {
    margin-top: 28px;
  }
  
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: all 0.3s ease;
  }
  
  .btn-primary {
    background-color: #6699CC;
    color: white;
    box-shadow: 0 2px 4px rgba(0, 51, 102, 0.1);
  }
  
  .btn-primary:hover {
    background-color: #003366;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 51, 102, 0.2);
  }
  
  .login-footer {
    text-align: center;
    margin-top: 28px;
    color: #000044;
    opacity: 0.7;
  }
  
  .login-footer a {
    color: #6699CC;
    text-decoration: none;
    font-weight: 500;
  }
  
  .login-footer a:hover {
    text-decoration: underline;
    color: #003366;
  }
</style>
