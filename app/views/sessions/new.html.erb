<div class="login-container">
  <div class="login-card">
    <h2>Log In</h2>
    
    <%= form_with(url: login_path, method: :post, class: "login-form") do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", required: true %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="login-footer">
      <p>Don't have an account? <%= link_to "Sign Up", signup_path %></p>
    </div>
  </div>
</div>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }
  
  .login-card {
    background-color: white;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
  }
  
  .login-card h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #4f46e5;
  }
  
  .login-form {
    margin-bottom: 20px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
  }
  
  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 16px;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #4f46e5;
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
  }
  
  .form-actions {
    margin-top: 24px;
  }
  
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
  }
  
  .btn-primary {
    background-color: #4f46e5;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #4338ca;
  }
  
  .login-footer {
    text-align: center;
    margin-top: 24px;
    color: #6b7280;
  }
  
  .login-footer a {
    color: #4f46e5;
    text-decoration: none;
  }
  
  .login-footer a:hover {
    text-decoration: underline;
  }
</style>
