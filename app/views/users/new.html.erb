<div class="signup-container">
  <div class="signup-card">
    <h2>Join Harmoniq</h2>
    
    <%= form_with(model: @user, url: signup_path, class: "signup-form") do |form| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", required: true, minlength: 8 %>
        <small class="form-text">Minimum 8 characters</small>
      </div>
      
      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, class: "form-control", required: true, minlength: 8 %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="signup-footer">
      <p>Already have an account? <%= link_to "Log In", login_path %></p>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f0f4f8;
  }
  
  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }
  
  .signup-card {
    background-color: white;
    border-radius: 8px;
    padding: 35px;
    box-shadow: 0 8px 16px rgba(0, 51, 102, 0.1);
    width: 100%;
    max-width: 500px;
    border-top: 4px solid #6699CC;
  }
  
  .signup-card h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #003366;
    font-weight: 600;
  }
  
  .error-messages {
    background-color: #fff0f0;
    color: #b91c1c;
    padding: 12px;
    border-radius: 6px;
    margin-bottom: 20px;
    border-left: 3px solid #b91c1c;
  }
  
  .error-messages ul {
    margin: 0;
    padding-left: 20px;
  }
  
  .signup-form {
    margin-bottom: 20px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #000044;
  }
  
  .form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #C0C0C0;
    border-radius: 6px;
    font-size: 16px;
    transition: all 0.2s;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #6699CC;
    box-shadow: 0 0 0 2px rgba(102, 153, 204, 0.2);
  }
  
  .form-text {
    display: block;
    margin-top: 4px;
    font-size: 14px;
    color: #000044;
    opacity: 0.7;
  }
  
  .form-actions {
    margin-top: 28px;
  }
  
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: all 0.3s ease;
  }
  
  .btn-primary {
    background-color: #6699CC;
    color: white;
    box-shadow: 0 2px 4px rgba(0, 51, 102, 0.1);
  }
  
  .btn-primary:hover {
    background-color: #003366;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 51, 102, 0.2);
  }
  
  .signup-footer {
    text-align: center;
    margin-top: 28px;
    color: #000044;
    opacity: 0.7;
  }
  
  .signup-footer a {
    color: #6699CC;
    text-decoration: none;
    font-weight: 500;
  }
  
  .signup-footer a:hover {
    text-decoration: underline;
    color: #003366;
  }
</style>
