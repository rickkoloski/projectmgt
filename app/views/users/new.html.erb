<div class="signup-container">
  <div class="signup-card">
    <h2>Create an Account</h2>
    
    <%= form_with(model: @user, url: signup_path, class: "signup-form") do |form| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", required: true, minlength: 8 %>
        <small class="form-text">Minimum 8 characters</small>
      </div>
      
      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, class: "form-control", required: true, minlength: 8 %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="signup-footer">
      <p>Already have an account? <%= link_to "Log In", login_path %></p>
    </div>
  </div>
</div>

<style>
  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }
  
  .signup-card {
    background-color: white;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 500px;
  }
  
  .signup-card h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #4f46e5;
  }
  
  .error-messages {
    background-color: #fef2f2;
    color: #b91c1c;
    padding: 12px;
    border-radius: 6px;
    margin-bottom: 20px;
  }
  
  .error-messages ul {
    margin: 0;
    padding-left: 20px;
  }
  
  .signup-form {
    margin-bottom: 20px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
  }
  
  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 16px;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #4f46e5;
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
  }
  
  .form-text {
    display: block;
    margin-top: 4px;
    font-size: 14px;
    color: #6b7280;
  }
  
  .form-actions {
    margin-top: 24px;
  }
  
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
  }
  
  .btn-primary {
    background-color: #4f46e5;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #4338ca;
  }
  
  .signup-footer {
    text-align: center;
    margin-top: 24px;
    color: #6b7280;
  }
  
  .signup-footer a {
    color: #4f46e5;
    text-decoration: none;
  }
  
  .signup-footer a:hover {
    text-decoration: underline;
  }
</style>
